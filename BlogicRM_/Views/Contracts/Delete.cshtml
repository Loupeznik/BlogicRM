@model BlogicRM_.Models.Contract

@{
    ViewData["Title"] = "Smazat smlouvu";
}

<h1>@ViewBag.Title</h1>

<h3>Jste si jisti, že chcete tuto smlouvu smazat?</h3>
<div>
    <h4>Contract</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EvidenceNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EvidenceNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConclusionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConclusionDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValidityDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValidityDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Institution)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Institution.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.FullName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Administrator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Administrator.FullName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContractID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Zpět na seznam smluv</a>
    </form>
</div>
